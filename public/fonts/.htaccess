# Font files caching
# Cache fonts for 7 days with revalidation check
<IfModule mod_headers.c>
    # Set cache control for font files ONLY
    <FilesMatch "\.(woff2|woff|ttf|otf|eot)$">
        # Cache for 7 days (604800 seconds)
        Header set Cache-Control "public, max-age=604800, must-revalidate"
        
        # Add ETag for validation
        FileETag MTime Size
        
        # Set Expires header (7 days from now)
        ExpiresActive On
        ExpiresDefault "access plus 7 days"
    </FilesMatch>
    
    # DO NOT cache fonts.css (application code that may change)
    <FilesMatch "\.css$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Enable compression for font files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE text/css
</IfModule>

# Set correct MIME types for fonts
<IfModule mod_mime.c>
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/otf .otf
    AddType application/vnd.ms-fontobject .eot
</IfModule>
